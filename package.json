{
  "name": "telegram-worker-backend",
  "version": "1.0.0",
  "description": "Telegram bot backend for worker hours management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/index.js",
    "start:with-bot": "tsc && node dist/index.js",
    "start:no-bot": "tsc && cross-env SKIP_BOT_SETUP=true node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:with-bot": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:no-bot": "cross-env SKIP_BOT_SETUP=true ts-node-dev --respawn --transpile-only src/index.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/database.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/database.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/database.ts",
    "schema:drop": "typeorm-ts-node-commonjs schema:drop -d src/config/database.ts",
    "db:create": "node -e \"const { Client } = require('pg'); const client = new Client({connectionString: process.env.DATABASE_URL.replace(/\\/[^/]*$/, '')}); client.connect().then(() => client.query('CREATE DATABASE IF NOT EXISTS worker_hours_db')).then(() => client.end()).catch(console.error);\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.6",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.5",
    "telegraf": "^4.15.6",
    "typeorm": "^0.3.17",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^7.0.1",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
